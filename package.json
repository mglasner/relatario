{
    "name": "el-relatario",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "lint": "eslint js/",
        "lint:fix": "eslint js/ --fix",
        "lint:css": "stylelint '**/*.css'",
        "lint:css:fix": "stylelint '**/*.css' --fix",
        "format": "prettier --write '**/*.{js,css,html,json}'",
        "format:check": "prettier --check '**/*.{js,css,html,json}'",
        "dev": "node scripts/dev.js",
        "watch:datos": "node scripts/watch-datos.js",
        "build:datos": "node scripts/build-datos.js",
        "build": "npm run build:datos && npm run build:js && npm run build:css && npm run build:html",
        "build:js": "esbuild js/juego.js --bundle --minify --outfile=dist/juego.min.js --format=esm",
        "build:css": "esbuild estilos.css --bundle --minify --external:*.woff2 --external:*.webp --outfile=dist/estilos.min.css",
        "build:html": "node scripts/build-html.js",
        "img:optimize": "node scripts/optimizar-imagenes.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/mglasner/relatario.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "type": "module",
    "bugs": {
        "url": "https://github.com/mglasner/relatario/issues"
    },
    "homepage": "https://relatario.cl",
    "devDependencies": {
        "@eslint/js": "^10.0.1",
        "browser-sync": "^3.0.4",
        "esbuild": "^0.27.3",
        "eslint": "^10.0.0",
        "eslint-config-prettier": "^10.1.8",
        "globals": "^17.3.0",
        "js-yaml": "^4.1.1",
        "prettier": "^3.8.1",
        "sharp": "^0.34.5",
        "stylelint": "^17.3.0",
        "stylelint-config-standard": "^40.0.0"
    },
    "dependencies": {
        "js-chess-engine": "^2.4.6"
    }
}
